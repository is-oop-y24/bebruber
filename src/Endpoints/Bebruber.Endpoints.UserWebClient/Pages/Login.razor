@page "/login"
@using Bebruber.Endpoints.UserWebClient.Models
@inject IJSRuntime JS
@inject NavigationManager _navigationManager

<div class="card">
    <h4 class="card-header" style="background-color: #ffffff">Вход</h4>
    <div class="card-body">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator/>
            <div class="form-group">
                <label>Номер телефона или адрес электронной почты`</label>
                <InputText @bind-Value="_model.Login" class="form-control"/>
                <ValidationMessage For="@(() => _model.Login)"/>
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <PasswordFieldComponent @bind-Value="_model.Password" class="form-control"/>
                <ValidationMessage For="@(() => _model.Password)"/>
            </div>`
            <button disabled="@_loading" class="btn btn-primary">
                @if (_loading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Войти
            </button>
            <NavLink href="/register" class="btn btn-link">Нет аккаунта? Зарегистрироваться.</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private LoginModel _model = new();
    private bool _loading;

    private async Task OnValidSubmit()
    {
        _loading = true;
        try
        {
            throw new NotImplementedException();
            _navigationManager.NavigateTo("/");
        }
        catch (Exception e)
        {
            await JS.InvokeVoidAsync("alert", e.Message);
        }
        _loading = false;
    }

}