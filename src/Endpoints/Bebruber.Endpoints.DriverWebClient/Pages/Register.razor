@page "/register"
@using Bebruber.Endpoints.DriverWebClient.Models
@inject IJSRuntime JS
@inject NavigationManager _navigationManager

<div class="card">
    <h4 class="card-header" style="background-color: #ffffff">Регистрация</h4>
    <div class="card-body">
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator/>

            <div class="form-group">
                <label>ФИО</label>
                <InputText @bind-Value="_model.Name" placeholder="Иванов Иван Иванович" class="form-control"/>
                <ValidationMessage For="@(() => _model.Name)" />
            </div>

            <div class="form-group">
                <label>Номер телефона</label>
                <InputText @bind-Value="_model.PhoneNumber" placeholder="+7 (800) 555-35-35" class="form-control"/>
                <ValidationMessage For="@(() => _model.PhoneNumber)" />
            </div>

            <div class="form-group">
                <label>Номер водительского удостоверения</label>
                <InputText @bind-Value="_model.DriverLicense" placeholder="12 34 567890" class="form-control"/>
                <ValidationMessage For="@(() => _model.DriverLicense)" />
            </div>

            <div class="form-group">
                <label>Марка, модель и цвет автомобиля</label>
                <InputText @bind-Value="_model.CarType" placeholder="Bebromobil A1, черный" class="form-control"/>
                <ValidationMessage For="@(() => _model.CarType)" />
            </div>

            <div class="form-group">
                <label>Номер автомобиля</label>
                <InputText @bind-Value="_model.CarNumber" placeholder="A001AA198"  class="form-control"/>
                <ValidationMessage For="@(() => _model.CarNumber)" />
            </div>

            <button disabled="@_loading" class="btn btn-primary">
                @if (_loading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Зарегистрироваться
            </button>
            <NavLink href="/login" class="btn btn-link">Уже есть аккаунт? Войти.</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private RegisterModel _model = new();
    private bool _loading;

    private async Task OnValidSubmit()
    {
        _loading = true;
        try
        {
            throw new NotImplementedException();
            _navigationManager.NavigateTo("/login");
        }
        catch (Exception e)
        {
            await JS.InvokeVoidAsync("alert", e.Message); //TODO: custom error handling
        }
        _loading = false;
    }
}